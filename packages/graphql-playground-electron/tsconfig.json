{
  "compilerOptions": {
    "removeComments": true,
    "module": "commonjs",
    "jsx": "preserve",
    "sourceMap": true,
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "lib": ["es2015", "dom"],
    "outDir": "lib",
    "baseUrl": "./",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "lib"],
  "include": ["typings/custom.d.ts", "typings/styled-jsx.d.ts"],
  "files": ["src/renderer/index.tsx", "src/main/index.ts"]
}
