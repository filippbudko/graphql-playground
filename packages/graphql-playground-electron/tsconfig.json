{
  "compilerOptions": {
    "removeComments": true,
    "module": "commonjs",
    "jsx": "preserve",
    "sourceMap": true,
    "target": "es2015",
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "lib": ["es2015", "dom"],
    "outDir": "lib",
    "baseUrl": "./",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "typings/custom.d.ts",
    "typings/styled-jsx.d.ts"
  ],
  "files": [
    "src/main.ts",
    "src/root.tsx"
  ]
}
